<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.authen.RegisterwithEmail_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imtLogo"
            android:layout_width="71dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            app:srcCompat="@drawable/logo_instagram" />


        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edt_email_pass"
            android:hint="Email"
            android:inputType="text"
            android:paddingLeft="8dp"
            android:textSize="15sp">

            <requestFocus />

        </EditText>


        <EditText
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edt_email_pass"
            android:hint="Mật khẩu"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtCfPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edt_email_pass"
            android:hint="Xác nhận mật khẩu"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_btn_login"
            android:fontFamily="sans-serif-light"
            android:text="Đăng ký"
            android:textSize="15sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_btn_fgpass"
            android:fontFamily="sans-serif-light"
            android:text="Bạn đã có tài khoản ư?"
            android:textColor="#1877Fe"
            android:textSize="15sp"
            app:backgroundTint="@null" />


    </LinearLayout>
</LinearLayout>