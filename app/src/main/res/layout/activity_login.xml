<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.authen.RegisterwithEmailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imtLogo"
            android:layout_width="71dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="100dp"
            app:srcCompat="@drawable/logo_instagram" />
<!--
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email/Số điện thoại"
            android:inputType="text"
            android:textSize="12sp"
            android:background="@drawable/custom_edt_email_pass"
            android:paddingLeft="8dp"
            >
            <requestFocus/>
        </EditText>
-->

        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email/Số điện thoại"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtLoginEmailorPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edt_email_pass"
                android:textSize="16sp"
                android:inputType="text"
                android:paddingLeft="16dp"
                >
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:layout_marginTop="20dp"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:endIconMode="password_toggle"
            app:helperText="Yêu cầu*"
            app:helperTextTextColor="#CA0F0F"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtLoginPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edt_email_pass"
                android:textSize="16sp"
                android:maxLength="21"
                android:inputType="text"
                android:paddingLeft="20dp">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_btn_login"
            android:fontFamily="sans-serif-light"
            android:text="Đăng nhập"
            android:textSize="16sp"
            app:backgroundTint="@null"
            />
        <Button
            android:id="@+id/btnForgotpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_fgpass"
            android:fontFamily="sans-serif-light"
            android:text="Bạn quên mật khẩu ư?"
            android:textSize="16sp"
            app:backgroundTint="@null"
            android:textColor="#1877Fe"
            android:layout_gravity="center_horizontal"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn_register"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Tạo tài khoản mới"
                android:textColor="#1877Fe"
                android:textSize="16sp"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.737" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</LinearLayout>